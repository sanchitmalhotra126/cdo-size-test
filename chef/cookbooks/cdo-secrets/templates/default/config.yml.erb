<%=
  secrets = node['cdo-secrets']['config'].to_hash
  secrets['hosts'][node['hostname']] ||= {}
  secrets['hosts'][node['hostname']]['chef_managed'] ||= true
  secrets['hosts'][node['hostname']]['name'] ||= node.name
  secrets['hosts'][node['hostname']]['env'] ||= node.chef_environment
  YAML::dump secrets
%>
