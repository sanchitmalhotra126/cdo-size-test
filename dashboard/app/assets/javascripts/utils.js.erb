var addClickTouchEvent = function(element, handler) {
  var wrapper = function(e) {
    handler(e);
    e.preventDefault();
  };
  element.on({
    'touchstart': wrapper,
    'click': wrapper
  });
};

function onURLBlocked(base_url, callback) {
  $('<img width=1 height=1>')
      .on("error", callback)
      .attr("src", base_url + "?" + Math.random())
      .css("position", "absolute")
      .css("bottom", 0)
      .css("width", 1)
      .css("height", 1)
      .css("visibility", "hidden")
      .appendTo("body");
}
