= form_for @artifact do |f|
  - if @artifact.errors.any?
    #error_explanation
      %h2= "#{pluralize(@artifact.errors.count, "error")} prohibited this artifact from being saved:"
      %ul
        - @artifact.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
    = f.label :description
    = f.text_area :description
    = f.label :learning_module_id
    = f.select :learning_module_id, options_for_select(options_for_artifact_learning_module)

  .actions
    = f.submit 'Save'
