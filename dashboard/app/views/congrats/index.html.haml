:ruby
  require 'cdo/user_helpers'
  congrats_data = {}
  congrats_data[:language] = request.language
  congrats_data[:random_donor_twitter] = @random_donor_twitter
  if current_user
    congrats_data[:current_user] = current_user
    # We need to know the user's age to determine whether we should suggest
    # they use our advanced tools (AppLab & GameLab). For users who do not have
    # an age set, we default them to 12 so they aren't shown the tools if
    # they're indeed too young.
    congrats_data[:user_age] = current_user.age ||= 12
  end

#congrats-container

- content_for(:head) do
  %script{src: minifiable_asset_path('js/congrats/index.js'), data: {congrats: congrats_data.to_json}}
