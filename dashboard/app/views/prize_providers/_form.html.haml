= form_for @prize_provider do |f|
  - if @prize_provider.errors.any?
    #error_explanation
      %h2= "#{pluralize(@prize_provider.errors.count, "error")} prohibited this prize_provider from being saved:"
      %ul
        - @prize_provider.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :url
    = f.text_field :url
  .field
    = f.label :description_token
    = f.text_field :description_token
  .field
    = f.label :image_name
    = f.text_field :image_name
  .actions
    = f.submit 'Save'
