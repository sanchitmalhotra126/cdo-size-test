= form_for @prize do |f|
  - if @prize.errors.any?
    #error_explanation
      %h2= "#{pluralize(@prize.errors.count, "error")} prohibited this prize from being saved:"
      %ul
        - @prize.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :prize_provider_id
    = f.number_field :prize_provider_id
  .field
    = f.label :code
    = f.text_field :code
  .field
    = f.label :user_id
    = f.number_field :user_id
  .actions
    = f.submit 'Save'
