:css
  .arrow_box_up {
    padding: 20px;
    position: absolute;
    background-color: white;
    color: black;
    width: 300px;

    background: #fff;
    cursor: pointer;
  }
  .arrow_box_up:after {
    bottom: 100%;
    left: 50%;
    border: solid transparent;
    content: " ";
    height: 0;
    width: 0;
    position: absolute;
    pointer-events: none;
    border-color: rgba(255, 255, 255, 0);
    border-bottom-color: #fff;
    border-width: 10px;
    margin-left: -10px;
  }

