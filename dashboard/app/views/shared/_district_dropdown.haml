-require 'state_abbr'

- content_for(:head) do
  =javascript_include_tag 'js/districtDropdown'

#pl-application-form
  #pl-application-facets.form-section

    .form-group
      .question Select your school type
      %select#school-type.form-control{name: "school_type_s", type: "select", required: true}
        %option{value: "nil", selected: true}
        %option{value: "charter"} Charter
        %option{value: "private"} Private
        %option{value: "public"} Public
        %option{value: "other"} Other

    .form-group{style: "display: none; margin-top: 20px;"}
      .question Enter your school district's zip code
      %input#school-zipcode.form-control{name: "school_zip", type: "text", required: false}

    .form-group{style: "display: none; margin-top: 20px;"}
      .question Select your state
      %select#school-state.form-control{name: "school_state_s", type: "select", required: false}
        %option{value: "nil", selected: true}
        - get_all_states_with_dc.each do |state_abbr, state_name|
          %option{value: state_abbr}= state_name
        %option{value: "other"} Other

    .form-group{style: "display: none; margin-top: 20px;"}
      .question Search for your district
      #school-district
        %input.form-control{name: "school_district_id", type: "text", required: false}
