- teacher_blog_url = 'http://teacherblog.code.org/'
- signup_url = 'https://hourofcode.com/#join'
- scaling_url = 'http://teacherblog.code.org/post/152968866984/an-important-note-about-computer-science'

.teacher-announce
  .announce-heading{style: 'height: 20px;'}
    = t('home.announcement_title')
  .announce-content
    %a{href: scaling_url, target: '_blank'}
      .content-img-container
        = image_tag(CDO.shared_image_url('/teacher-announcement/hoc-scaling.png'), width: '200px')
    .content-text
      != t('home.announcement_hoc_scaling')
    .announce-learn-more
      %a{href: scaling_url, target: '_blank'}
        %button.primary= t('home.announcement_learn_more_button')
  .announce-content
    %a{href: signup_url, target: '_blank'}
      .content-img-container
        = image_tag(CDO.shared_image_url('/teacher-announcement/hoc-2016-launch.jpg'), width: '200px')
    .content-text
      != t('home.announcement_hoc_launch', signup_url: signup_url)
    .announce-learn-more
      %a{href: signup_url, target: '_blank'}
        %button.primary= t('home.announcement_host_an_hour_button')
  .mini-announcement
    .content-text
      %i.fa.fa-hand-o-right
      != t('home.announcement_all', teacher_blog_url: teacher_blog_url)

#clearboth{style: 'clear: both;'}
