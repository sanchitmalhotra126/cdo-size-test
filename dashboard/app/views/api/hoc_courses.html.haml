  .row{style: 'margin: 0px;'}
    = render partial: 'shared/course_tall_block', locals: { id: Script::FLAPPY_NAME, showState: false }
    = render partial: 'shared/course_tall_block', locals: { id: Script::INFINITY_NAME, showState: false }
    = render partial: 'shared/course_tall_block', locals: { id: Script::PLAYLAB_NAME, showState: false }
