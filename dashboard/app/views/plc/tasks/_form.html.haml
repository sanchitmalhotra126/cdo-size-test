= form_for @plc_task do |f|
  - if @plc_task.errors.any?
    #error_explanation
      %h2= "#{pluralize(@plc_task.errors.count, "error")} prohibited this plc_task from being saved:"
      %ul
        - @plc_task.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
    = f.label :learning_module_id
    = f.select :plc_learning_module_id, options_for_select(options_for_plc_task_learning_modules)

  .actions
    = f.submit 'Save'
