= form_for @regional_partner do |f|
  - if @regional_partner.errors.any?
    #error_explanation
      %h2= "#{pluralize(@regional_partner.errors.count, "error")} prohibited this Regional Partner from being saved:"
      %ul
        - @regional_partner.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :group
    = f.text_field :group
  .field
    = f.label :urban
    = f.check_box :urban
  .field
    = f.label :cohort_capacity_csd
    = f.text_area :cohort_capacity_csd
  .field
    = f.label :cohort_capacity_csp
    = f.text_area :cohort_capacity_csp
  - if @regional_partner.apps_open_date.is_a? Hash
    - [Pd::Workshop::COURSE_CSP, Pd::Workshop::COURSE_CSD].each do |course|
      %li
        = course
        - ['facilitator', 'teacher'].each do |role|
          = "Apps Open Date for #{course} and #{role} - #{@regional_partner.get_apps_open_date(course: course, role: role)}"
  .field
    = f.label 'Apps Open Date - YYYY-MM-DD'
    = f.text_area :apps_open_date
  - if @regional_partner.apps_open_date.is_a? Hash
    - [Pd::Workshop::COURSE_CSP, Pd::Workshop::COURSE_CSD].each do |course|
      %li
        = course
        - ['facilitator', 'teacher'].each do |role|
          = "Apps Close Date for #{course} and #{role} - #{@regional_partner.get_apps_close_date(course: course, role: role)}"
  .field
    = f.label 'Apps Close Date - YYYY-MM-DD'
    = f.text_area :apps_close_date
  .field
    = f.label :principal_approval
    = f.select :principal_approval, options_for_select(RegionalPartner::PRINCIPAL_APPROVAL_TYPES.map {|x| [x.titleize, x]})
  .field
    = f.label :attention
    = f.text_field :attention
  .field
    = f.label :street
    = f.text_field :street
  .field
    = f.label :apartment_or_suite
    = f.text_field :apartment_or_suite
  .field
    = f.label :city
    = f.text_field :city
  .field
    = f.label :state
    = f.text_field :state
  .field
    = f.label :zip_code
    = f.text_field :zip_code
  .field
    = f.label :phone_number
    = f.text_field :phone_number
  .field
    = f.label :notes
    = f.text_area :notes
  %button.btn.btn-primary{type: 'submit', style: 'margin: 0'} Save
