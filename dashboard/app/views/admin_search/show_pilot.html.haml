%h1
  = @pilot_name
= form_tag controller: 'admin_search', action: 'add_to_pilot', method: "post" do
  = text_field_tag :email, nil, placeholder: "Teacher's email"
  = hidden_field_tag 'pilot_name', @pilot_name
  = submit_tag "Add"
%table
  %tr
    %th
      %span Email
  - @emails.each do |email|
    %tr
      %td
        %span= email
