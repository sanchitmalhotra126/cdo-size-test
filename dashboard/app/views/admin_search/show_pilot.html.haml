%h1
  = @pilot_name
= form_tag(controller: 'admin_search', action: 'add_to_pilot', method: "post") do
  = label_tag(:email, "Add teacher to pilot")
  = text_field_tag(:email, nil, placeholder: "Email")
  = submit_tag("Add")
%table
  %tr
    %th
      %span Email
  - @emails.each do |email|
    %tr
      %td
        %span= email
