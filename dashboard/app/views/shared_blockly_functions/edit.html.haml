- content_for(:head) do
  %script{src: asset_path('js/blockly.js')}
  %script{src: asset_path("js/#{js_locale}/blockly_locale.js")}
  = stylesheet_link_tag 'css/levelbuilder', media: 'all'

  :scss
    #blockly-container {
      height: 600px;
      position: relative;
    }
    #modalEditorClose {
      display: none;
    }

%h1= @shared_blockly_function.new_record? ? "New Blockly Function" : "Editing Blockly Function #{@shared_blockly_function.name}"

#blockly-container

%p

= form_for @shared_blockly_function do |f|
  = f.hidden_field :name
  = f.hidden_field :description
  = f.hidden_field :arguments
  = f.hidden_field :stack
  %div
    = f.submit class: 'btn', id: 'shared_function_submit'

%script{src: minifiable_asset_path('js/shared_blockly_functions/edit.js')}

= link_to "Back", shared_blockly_functions_path
