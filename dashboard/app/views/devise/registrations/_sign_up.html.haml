#signup
  .row
    .span9
      %h1= t('signup_form.title')
      - if @already_hoc_registered
        %p= t('signup_form.hoc_already_signed_up_content_post_hoc', studio_url: CDO.studio_url('/')).html_safe
      - else
        %p= t('signup_form.overview').html_safe
        = t('auth.already_signedup')
        = link_to t('nav.user.signin'), new_session_path(resource_name)

  .row
    .span8.signupblock

      - if SignUpTracking.new_sign_up_experience?(session)
        = render 'new_sign_up_form'
      - else
        = render 'old_sign_up_form'

      -# More information for students about email storage.
      .student-options
        %br/
        %br/
        *
        -# Temporarily use student_terms so that existing translations get used.
        != t('signup_form.student_terms')

    .span4
      .devise_links
        = render "devise/shared/links"

    %div{style: "clear:both"}
    %br/
    %br/
    %br/
