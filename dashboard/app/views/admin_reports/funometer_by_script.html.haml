- content_for :head do
  %script{src:'https://www.google.com/jsapi'}

%h1
  Fun-O-Meter Stats

%h2
  = 'Script: ' + @script_name

%h3
  Overall Percentage:
  = number_to_percentage(@overall_percentage, precision: 2)

= render 'funometer_percentages_by_day', :percentages_by_day => percentages_by_day

.by_level
  %h3
    Percentages by Level
  %table
    %tr
      - @ratings_by_level_headers.each do |header|
        %th
          %span= header
    - @ratings_by_level.each do |level|
      %tr
        %td
          %span= level.level_id
        %td
          %span= number_to_percentage(level.percentage, precision: 2)
        %td
          %span= level.cnt
