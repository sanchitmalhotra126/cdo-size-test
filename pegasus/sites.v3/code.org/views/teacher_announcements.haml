- teacher_blog_url = 'http://teacherblog.code.org/'
- signup_url = 'https://hourofcode.com/#join'

.teacher-announce
  .announce-heading
    = I18n.t(:dashboard_announcements)
  .announce-content
    %a{href: signup_url, target: '_blank'}
      .content-img-container
        %img.content-img{src: CDO.shared_image_url('/teacher-announcement/hoc-2016-launch.jpg'), width: '200px'}
    .content-text
      = I18n.t(:dashboard_announce_hoc_launch, signup_url: signup_url)
    .announce-learn-more
      %a{href: signup_url, target: '_blank'}
        %button.primary= I18n.t(:dashboard_announce_host_an_hour_button)
  .mini-announcement
    .content-text
      %i.fa.fa-hand-o-right
      = I18n.t(:dashboard_announce_all, teacher_blog_url: teacher_blog_url)
