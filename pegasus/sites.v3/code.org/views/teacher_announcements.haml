- teacher_blog_url = 'http://teacherblog.code.org/'
- scaling_url = 'http://teacherblog.code.org/post/152968866984/an-important-note-about-computer-science'
- mc_url = 'https://code.org/minecraft'

.teacher-announce
  .announce-heading
    = I18n.t(:dashboard_announcements)
  .announce-content
    %a{href: scaling_url, target: '_blank'}
      .content-img-container
        %img.content-img{src: CDO.shared_image_url('/teacher-announcement/hoc-scaling.png'), width: '200px'}
    .content-text
      = I18n.t(:dashboard_announce_hoc_scaling)
    .announce-learn-more
      %a{href: scaling_url, target: '_blank'}
        %button.primary= I18n.t(:dashboard_announce_learn_more_button)
  .announce-content
    %a{href: mc_url, target: '_blank'}
      .content-img-container
        %img.content-img{src: CDO.shared_image_url('/teacher-announcement/mc-2016-launch.jpg'), width: '200px'}
    .content-text
      = I18n.t(:dashboard_announce_mc_launch)
    .announce-learn-more
      %a{href: mc_url, target: '_blank'}
        %button.primary= I18n.t(:dashboard_announce_learn_more_button)
  .mini-announcement
    .content-text
      %i.fa.fa-hand-o-right
      = I18n.t(:dashboard_announce_all, teacher_blog_url: teacher_blog_url)
