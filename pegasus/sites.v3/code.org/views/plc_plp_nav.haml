#about_nav
  %span.about_list
    -current_url = '/educate/professional-learning-partner'
    -{'Apply to be a Partner'=>current_url+'/application', 'Terms of Partnership'=>current_url+'/terms', 'Where we need partners'=> current_url+'#partners', 'FAQ'=>current_url+'/faq'}.each_pair do |label,url|
      - if current_url == url
        %span.about_list_item_selected= label
      -else
        %a.about_list_item{:href=>url}= label
      %hr.narrow_hr

