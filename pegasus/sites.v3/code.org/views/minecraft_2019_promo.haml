%link{href: "/css/tutorial-promo.css", rel: "stylesheet"}

:ruby
  mee_image = "/images/mc/fit-1940x620/mc_mee_wide_large_2019.jpg"
  mee_title = "Minecraft AI for Good"
  mee_description1 = "The new Minecraft Hour of Code tutorial is now available in Minecraft: Education Edition for Windows, Mac, and iPad. Learn the basics of coding and explore AI with your students!"
  mee_description2 = "Access free resources including a lesson plan, videos, computer science curriculum, and teacher trainings."
  mee_link = "https://microsoft.com"

.tutorial-promo-container
  .img-container
    %img.background-img{src: mee_image}
  .col-50.specific-tutorial.right-tutorial{style: "right: 10px; top: 10px; height: initial"}
    .tutorial-box
      %h2.specific-tutorial-heading= mee_title
      .tutorial-details{style: "height: initial"}
        %p.tutorial-description
          = mee_description1
        %p.tutorial-description
          = mee_description2
      %a{href: mee_link, target: '_self'}
        %button.tutorial-button{style: "color: #4d575f; background-color: white; border-color: white; font-size: 14px"}
          = "Get Started"
      %img{style: "position: absolute; top: 10px; right: 10px; width: 60px", src: '/images/mc/new_tag.png'}
  .clear
