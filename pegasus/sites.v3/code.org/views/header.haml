      =view banner

:javascript
  $ = jQuery;
  $(document).ready(function() {
    $.ajax({
      type: "GET",
      url: '/dashboardapi/user_menu',
      //data: "id=" + id, // appears as $_GET['id'] @ ur backend side
      success: function(data) {
        // data is ur summary
        var signInButton = $('#sign_in_or_user');
        signInButton.html(data);
        signInButton.css({"display":"inline-block"});
      }
    });
  });
