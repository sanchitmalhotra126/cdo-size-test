= view :top_hoc_tutorial_applab, image_match_youtube_height: false

- if ['mc', 'dance'].include? DCDO.get('hoc_launch', nil)
  / TODO: (madelynkasula) update with new MC Aquatic HOC tutorial data
  - minecraft_img_url = CDO.code_org_url("")
  - minecraft_title = ""
  - minecraft_subtitle = ""
- else
  - minecraft_img_url = CDO.code_org_url("/images/fill-485x260/mc/special-announcement-hoc2017.jpg")
  - minecraft_title = "Minecraft Hour of Code"
  - minecraft_subtitle = "Minecraft is back for the Hour of Code with a brand new activity! Journey through Minecraft with code."

.col-49
  .tutorial-tile
    %a{href: "/minecraft"}
      %img.tutorial-tile-img{src: minecraft_img_url}
    .tutorial-info
      %h3{style: "margin-top: 0px;"}= minecraft_title
      .smalltext= minecraft_subtitle
      %a{href: "/minecraft"}
        %button.tutorial-info-start.tutorial-gray Start tutorial
      .tutorial-info-guide
        %a{href: "/hourofcode/mc"}
          View teacher guide
      .clear
