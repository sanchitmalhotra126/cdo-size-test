#about_nav
  %span.about_list
    -current_url = request.path_info
    -{ 'Learning at home'=>'/athome', 'Code Break'=>'/athome/break','One-hour tutorials'=>'/athome#hoc', 'Project ideas'=>'/athome/labs', 'Express courses'=>'/athome#express','Phone-friendly options'=>'/athome#mobile','Unplugged activities'=>'/athome#unplugged','Educational videos'=>'/athome#videos', 'Support for teachers'=>'/athome#teacher-support', 'FAQs'=>'/faq'}.each_pair do |label,url|
      - if current_url == url
        %span.about_list_item_selected= label
      -else
        %a.about_list_item{:href=>url}= label
      %hr.narrow_hr

