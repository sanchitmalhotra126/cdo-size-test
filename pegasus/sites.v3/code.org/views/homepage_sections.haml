#audienceblocks{style: "text-align:center; margin-top:0px"}
  - blocks = DB[:cdo_homepage].where(type_s: ["block", "blockshort"], active_s: ["show","hide"], site_s: [request.site,"both"]).all
  - blocks.each do |block|
    - display = block[:active_s] == "hide" ? "none" : "block"
    .block{style: "display: #{display}"}
      - block[:links] = DB[:cdo_homepage].where(type_s: "blocklink", text1_s: block[:id_s], active_s: ["show","hide"], site_s: [request.site,"both"]).all
      - if block[:language_supported_s].nil_or_empty? || (block[:language_supported_s] == "en" && request.language == "en") || (block[:language_supported_s] == "not en" && request.language != "en")
        - if block[:type_s] == "block"
          = view :homepage_linkslot_tall_quarter_white, entry: block
        - elsif block[:type_s] == "blockshort"
          = view :homepage_linkslot_tall_quarter_white_short, entry: block
