#audienceblocks{style: "text-align:center; margin-top:0px"}
  - blocks = DB[:cdo_homepage].where(type_s: "block", active_s: ["show","hide"], site_s: [request.site,"both"]).all
  - blocks.each do |block|
    - display = block[:active_s] == "hide" ? "none" : "block"
    .block{style: "display: #{display}"}
      - block[:links] = DB[:cdo_homepage].where(type_s: "blocklink", text1_s: block[:id_s], active_s: ["show","hide"], site_s: [request.site,"both"]).all
      = view :homepage_linkslot_tall_quarter_white, entry: block
