#about_nav
  %span.about_list
    -current_url = request.path_info
    -{'About the Program'=>'/international',
      'Get Involved'=>'/international/getinvolved',
      'Apply to be a Partner'=> '/international/apply',
      'Questions?'=>'/international/faqs'}.each_pair do |label,url|
      - if current_url == url
        %span.about_list_item_selected= label
      -else
        %a.about_list_item{:href=>url}= label
      %hr.narrow_hr

