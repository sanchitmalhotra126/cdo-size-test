- if Homepage.show_professional_learning_banner(request)
  = inline_css 'homepage_below_hero_plane_banner.css'
  - text = Homepage.professional_learning_banner_text()
  - header_text = Homepage.professional_learning_banner_header()

  .homepage-professional-learning-banner
    %a.linktag#pl-2019{href: "/educate/professional-learning/middle-high"}
      .nonphone.col-80.tablet-feature
        .left.col-80.animateSlideInFromLeft
          .banner
            %img{src: "/images/homepage/superhero-banner.png"}
            .header= header_text
            .text= text
        .right.col-20
          %button
            Join us
      .phone.phone-feature
        .header= header_text
        .text= text
        %button
          Join us

    .clear
