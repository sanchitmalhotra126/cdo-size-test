.col-50{style: "padding: 10px"}
  %a{href: url, style: "font-family: 'Gotham 4r', sans-serif; color: black; text-decoration: none"}
    .div{style: " padding: 20px; border-radius: 10px; color: black; border: solid grey 1px" }
      .div{style: "font-size: 24px; line-height: 1.5;"}
        = title
      - if defined?(grades)
        .div
          Grades
          = grades
      - if defined?(subject)
        .div
          Subject
          = subject
      - if defined?(duration)
        .div
          Duration
          = duration
      .div
        = description
      - if defined?(action)
        %a{href: action_url}
          %button
            = action
