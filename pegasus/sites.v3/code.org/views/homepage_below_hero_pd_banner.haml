- if Homepage.show_professional_learning_banner(request)
  = inline_css 'homepage_below_hero_pd_banner.css'
  - header_text = 'Help students become superheroes!'

  - if audience_text == 'you'
    - text = 'Our Professional Learning program helps you teach computer science!'
  - else
    - text = 'Our Professional Learning program helps educators teach computer science!'

  .homepage-professional-learning-banner
    %a.linktag#pl-2019{href: link_address}
      .homepage-pd-banner-desktop.col-80.desktop-feature
        .banner
          %img{src: "/images/homepage/superhero-banner.png"}
        .left.col-80.animateSlideInFromLeft
          .header= header_text
          .text= text
        .right.col-20
          %button
            #{button_label}
      .homepage-pd-banner-tablet.col-80.tablet-restrictive-feature
        .banner
          %img{src: "/images/homepage/superhero-banner-half.png"}
          .text-button-wrapper
            .header= header_text
            .text= text
            %button
              #{button_label}
      .homepage-pd-banner-phone.phone-feature
        .text-button-wrapper
          .header= header_text
          .text= text
          %button
            #{button_label}

    .clear
