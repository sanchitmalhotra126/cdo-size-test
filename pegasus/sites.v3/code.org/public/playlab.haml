%link{href: "/css/tutorial-landing.css", rel: "stylesheet"}

%div{style: "clear:both"}

.playlab-container
  %h1= I18n.t(:playlab_choose_theme)
  %div.image-collection
    %a.white-link{href: "/api/hour/begin/playlab"}
      %div.choice
        %div.choice-container
          %div.choice-label.purple= I18n.t(:playlab_classic_title)
          %img.character-img{src: "/images/playlab_original3.png"}
    %a.white-link{href: "/api/hour/begin/gumball"}
      %div.choice
        %div.choice-container
          %div.choice-label.blue= I18n.t(:playlab_gumball_title)
          %img.character-img{src: "/images/playlab_gumball.png"}
    %a.white-link{}
      %div.choice
        %div.choice-container
          %div.choice-label.green= I18n.t(:playlab_iceage_title)
          %img.character-img{src: "/images/playlab_iceage.png"}

%div{style: "clear:both"}

.inspire-videos{style: "clear: both;"}
  %h2= I18n.t(:starwars_watch_videos)
  =view :inspirational_videos

