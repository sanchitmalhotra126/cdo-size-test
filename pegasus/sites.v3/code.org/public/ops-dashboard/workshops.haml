---
layout: none
template: none
---
- authentication_required!

%a{href:'/ops-dashboard'}
  Dashboard
>
%span{href:'/ops-dashboard/workshops'}
  Workshops

%h1 Workshops
- if dashboard_user[:admin]
  %a.btn.btn-white{href:'#/workshops/new'}
    Create New Workshop
%table{style:'width:100%; margin-top:20px;'}
  %tr
    %th.manage-th
      %a{'ng-click' => 'order = "name"'}
        Workshops Name
    %th.manage-th
      %a{'ng-click' => 'order = "program"'}
        Program Type
    %th.manage-th
      %a{'ng-click' => 'order = "cohort"'}
        Teacher Cohort
    %th.manage-th
      %a{'ng-click' => 'order = "date"'}
        Start Date
    %th.manage-th
      %a{'ng-click' => 'order = "address"'}
        Address
    - if dashboard_user[:admin]
      %th.manage-th
        Manage
  %tr{'ng-repeat' => 'workshop in workshops | orderBy:order'}
    %td
      %p
        {{workshop.name}}
      %a{href:'#/workshops/{{workshop.id}}/attendance'}
        View attendance
    %td
      %span
        {{program_types[workshop.program_type].short_name}}
    %td
      %span
        {{cohortName(workshop.cohort_id)}}
    %td
      %div{'ng-repeat' => 'segment in workshopSegments'}
        {{segment.start | date:'longDate'}}
    %td
      %span
        {{workshop.location}}
    - if dashboard_user[:admin]
      %td
        %a.btn.btn-white{href:'#/workshops/{{workshop.id}}/edit'} Edit
        %button.btn.btn-danger{'ng-click' => 'workshop.$remove({id: workshop.id}) && workshops.splice($index, 1);'} Delete

:css

  a {
    color: white;
  }
  a:hover {
    cursor: pointer;
    text-decoration: none;
  }