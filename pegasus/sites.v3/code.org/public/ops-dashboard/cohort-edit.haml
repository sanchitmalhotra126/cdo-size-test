---
layout: none
theme: none
---
- authentication_required!

%a{href:'/ops-dashboard'}
  Dashboard
>
%a{href:'/ops-dashboard#/cohorts'}
  Cohorts
>
%span
  Cohort Management

%h1{"ng-show" => "cohort.id"} Edit {{cohort.name}}
%h1{"ng-show" => "!cohort.id"} Add cohort

%form#cohort-edit-form{role: "form"}
  .row
    .form-group.col-sm-6
      %label.control-label{for: "cohort-name"} Cohort Name
      %div
        %input#cohort-name.form-control{type: "text", "ng-model" => "cohort.name"}
  .row
    .form-group.col-sm-6
      %label.control-label{for: "cohort-program-type"} Program Type
      %div
        %select.cohort-program-type.form-control{"ng-model" => "cohort.program_type", "ng-disabled" => "cohort.program_type_disabled"}
          %option{"ng-repeat" => "program_type in program_types", value: "{{program_type.id}}"}
            {{program_type.long_name}}
    .col-sm-8
      .panel.panel-default
        .panel-heading
          %h3{style: "margin-top: 0; margin-bottom: 0;"} Districts
        .panel-heading
          .row
            .col-sm-8 Name
            .col-sm-2 Max
        .panel-body
          .row{"ng-repeat" => "cohort_district in cohort.districts"}
            .form-group.col-sm-8{style: "margin-bottom: 0;"}
              %select.district-name.form-control{name: "name", "ng-model" => "cohort_district.id", "ng-options"=>"district.id as district.name for district in districts", selectize: true}
            .col-sm-2
              %input.district-max-teachers.form-control{name: "max_teachers", type: "text", "ng-model" => "cohort_district.max_teachers"}
            .col-sm-2
              %a.btn.btn-white.btn-xs{"ng-click" => "newDistrict($event)", style: "padding: 1px 5px; font-size: 12px; line-height: 1.5; border-radius: 3px; height: auto; color: #ccc; margin-top: 4px;"}
                %i.glyphicon.glyphicon-plus
              %a.btn.btn-white.btn-xs{"ng-click" => "cohort.districts.splice($index, 1)", "ng-hide" => "cohort.districts.length == 1", style: "padding: 1px 5px; font-size: 12px; line-height: 1.5; border-radius: 3px; height: auto; color: #ccc; margin-top: 4px;"}
                %i.glyphicon.glyphicon-remove

  .form-group.action-buttons
    %button#btn-save.btn.btn-default{type: "submit", "ng-click" => "save(cohort)"} Save
    %button#btn-cancel.btn.btn-link{"ng-click" => "cancel_edit()"} Cancel
