:ruby
  providers = []
  providers << {id: "ozobot", url: "https://ozobot.com/"}
  providers << {id: "littlebits", url: "https://littlebits.com/"}
  providers << {id: "kano", url: "https://kano.me/"}
  providers << {id: "thimble", url: "https://www.thimble.io/"}
  providers << {id: "dexter", url: "https://www.gigglebot.io/"}
  latam_language_codes = ["la", "es", "pt", "po"]
  show_latam_videos = DCDO.get("show_latam_videos", nil)

#joindescription
  #calltoaction
    %h2.join-us-header=hoc_s(:front_join_us_announcements)
    
    -# If language Spanish or Portuguese, show alternate
    -# promo video for LATAM Hour of Code.
    - if latam_language_codes.include?(@language) && show_latam_videos
      %iframe{allowFullScreen: 'true', frameborder: '0', src: "https://www.youtube-nocookie.com/embed/EGgdCryC8Uo?iv_load_policy=3&amp;rel=0&amp;autohide=1&amp;showinfo=0&amp;autoplay=1&cc_load_policy=1", style: 'width: 300px; height: 300px;'}
    - else
      %iframe{allowFullScreen: 'true', frameborder: '0', src: "https://www.youtube-nocookie.com/embed/VYqHGIR7a_k?iv_load_policy=3&amp;rel=0&amp;autohide=1&amp;showinfo=0&amp;autoplay=1&cc_load_policy=1", style: 'width: 300px; height: 300px;'}

    .category-button.purple-background
      %b.category-header=hoc_s(:front_join_us_robotics)
      %span=hoc_s(:front_join_us_robotics_link)
    %br

    .robotics-providers
      - providers.each do |provider|
        %a.category-link{href: provider[:url], target: "_blank"}
          .robotics-provider
            %img{style: "width: 100%; margin-bottom: 20px", src: "/images/fit-200/robotics/hoc2018/#{provider[:id]}-logo.png"}
            %img{style: "width: 100%", src: "/images/fit-200/robotics/hoc2018/#{provider[:id]}-image.png"}
    .clear
