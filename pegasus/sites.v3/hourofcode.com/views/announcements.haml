:ruby
  providers = []
  providers << {id: "ozobot", url: "https://ozobot.com/"}
  providers << {id: "littlebits", url: "https://littlebits.com/"}
  providers << {id: "kano", url: "https://kano.me/"}
  providers << {id: "thimble", url: "https://www.thimble.io/"}
  providers << {id: "dexter", url: "https://www.gigglebot.io/"}

#joindescription
  #calltoaction
    %h2.join-us-header=hoc_s(:front_join_us_announcements)
    .category-button.purple-background
      %b.category-header=hoc_s(:front_join_us_robotics)
      %span=hoc_s(:front_join_us_robotics_link)
    %br

    .robotics-providers
      - providers.each do |provider|
        .robotics-provider
          %a.category-link{href: provider[:url], target: "_blank"}
            %img{style: "width: 100%; margin-bottom: 20px", src: "/images/fit-200/robotics/hoc2018/#{provider[:id]}-logo.png"}
            %img{style: "width: 100%", src: "/images/fit-200/robotics/hoc2018/#{provider[:id]}-image.png"}
    .clear
