
%link{rel:'stylesheet', type:'text/css', href:'/css/wide-layout.css'}
= view :header

.container

  - if header['nav']
    .row
      .col-sm-9
        = body
      .col-sm-3.nav-col
        = view(header['nav'])
  - else
    = body

%br/
%br/
%br/

-if header['theme'] == 'responsive'
  .desktop-feature
    = view :footer
  .mobile-headers.mobile-feature
    = view :mobile_footer_responsive
-else
  = view :footer
