#!/usr/bin/env ruby

require_relative '../../lib/cdo/git_utils'

if ENV['CI']
  `git config --global user.email "circleci-github@example.com"`
  `git config --global user.name "CircleCI"`
end

puts "Merging base branch #{GitUtils.pr_base_branch_or_default_no_origin}"

`git merge origin/#{GitUtils.pr_base_branch_or_default_no_origin}`

exit($?.exitstatus)
