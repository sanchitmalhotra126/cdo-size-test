<div id="netsim_send_widget" class="netsim_send_widget">
  <h1>Send a Message</h1>
  <div class="netsim_packet">
    <table>
      <thead>
        <tr>
          <th nowrap class="toAddress">To</th>
          <th nowrap class="fromAddress">From</th>
          <th nowrap class="packetInfo">Packet</th>
          <th class="message">Message</th>
        </tr>
      </thead>
      <tbody>
        <tr class="ascii">
          <td nowrap class="toAddress"><input type="text" class="toAddress" /></td>
          <td nowrap class="fromAddress"><input type="text" class="fromAddress" /></td>
          <td nowrap class="packetInfo"><input type="text" class="packetIndex" /> of <input type="text" class="packetCount" /></td>
          <td class="message"><div><textarea class="message"></textarea></div></td>
        </tr>
        <tr class="decimal">
          <td nowrap class="toAddress"><input type="text" class="toAddress" /></td>
          <td nowrap class="fromAddress"><input type="text" class="fromAddress" /></td>
          <td nowrap class="packetInfo"><input type="text" class="packetIndex" /> of <input type="text" class="packetCount" /></td>
          <td class="message"><div><textarea class="message"></textarea></div></td>
        </tr>
        <tr class="hexadecimal">
          <td nowrap class="toAddress"><input type="text" class="toAddress" /></td>
          <td nowrap class="fromAddress"><input type="text" class="fromAddress" /></td>
          <td nowrap class="packetInfo"><input type="text" class="packetIndex" /> of <input type="text" class="packetCount" /></td>
          <td class="message"><div><textarea class="message"></textarea></div></td>
        </tr>
        <tr class="binary">
          <td nowrap class="toAddress"><input type="text" class="toAddress" /></td>
          <td nowrap class="fromAddress"><input type="text" class="fromAddress" /></td>
          <td nowrap class="packetInfo"><input type="text" class="packetIndex" /> of <input type="text" class="packetCount" /></td>
          <td class="message"><div><textarea class="message"></textarea></div></td>
        </tr>
      </tbody>
    </table>
    <span class="bit_counter"></span>
  </div>
  <div class="send_widget_footer">
    <!-- Packet size slider -->
    <!-- Add packet button -->
    <input type="button" id="send_button" value="Send" />
  </div>
</div>